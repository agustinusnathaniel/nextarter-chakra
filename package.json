{
  "name": "nextarter-chakra",
  "version": "0.1.0",
  "private": true,
  "author": "agustinusnathaniel",
  "engines": {
    "node": ">=22.11.x"
  },
  "packageManager": "pnpm@10.7.1",
  "pnpm": {
    "neverBuiltDependencies": []
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "turbo": "pnpm dlx turbo@2.5.0",
    "build:turbo": "pnpm turbo run build",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && pnpm format",
    "type-check": "tsc --noEmit",
    "check:turbo": "pnpm turbo lint type-check",
    "test:e2e": "playwright test",
    "format": "prettier --write src",
    "up-interactive": "pnpm up -i",
    "up-latest": "pnpm up-interactive -L",
    "release": "cross-env HUSKY=0 commit-and-tag-version",
    "push-release": "git push --follow-tags origin main",
    "prepare": "husky"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.16.1",
    "@emotion/react": "^11.14.0",
    "commit-and-tag-version": "^12.5.1",
    "knip": "^5.50.5",
    "next": "^15.3.1",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^3.16.1",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@commitlint/cz-commitlint": "19.8.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.25.1",
    "@playwright/test": "^1.52.0",
    "@types/react": "^19.1.2",
    "commitizen": "^4.3.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.25.1",
    "eslint-config-next": "^15.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "next-sitemap": "^4.2.3",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  }
}
